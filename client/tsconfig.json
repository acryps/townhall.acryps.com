{
	"compileOnSave": false,
	"compilerOptions": {
		"module": "System",
		"outFile": "dist/scripts.js",
		"target": "esnext",
		"jsx": "react",
		"jsxFactory": "Component.createElement",
		"esModuleInterop": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"baseUrl": "."
	},
	"include": [
		"**/*",
		"node_modules/vldom/*.ts"
	],
	"exclude": [
		"node_modules/vldom/dist"
	]
}